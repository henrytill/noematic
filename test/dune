(executable
 (name smoke)
 (modules smoke)
 (libraries brr)
 (modes js))

(rule
 (alias runsmoke)
 (package noematic)
 (deps
  smoke.bc.js
  (:js smoke.mjs))
 (action
  (run %{bin:node} --test %{js})))

