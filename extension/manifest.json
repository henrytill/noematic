{
  "manifest_version": 3,
  "name": "noematic",
  "version": "0.1",
  "description": "Search your backlog",
  "icons": {
    "48": "icons/noematic-48.png"
  },
  "background": {
    "service_worker": "background/background.bc.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.bc.js"]
    }
  ],
  "action": {
    "default_icon": {
      "48": "icons/noematic-48.png"
    },
    "default_popup": "popup/popup.html",
    "default_title": "do it"
  },
  "permissions": ["tabs", "nativeMessaging"],
  "host_permissions": ["<all_urls>"]
}
